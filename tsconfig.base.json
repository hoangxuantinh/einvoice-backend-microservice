{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "@common/configuration/*": ["libs/configuration/src/lib/*"],
      "@common/constants/*": ["libs/constants/src/lib/*"],
      "@common/decorators/*": ["libs/decorators/src/lib/*"],
      "@common/entities/*": ["libs/entities/src/lib/*"],
      "@common/guards/*": ["libs/guards/src/lib/*"],
      "@common/interceptors/*": ["libs/interceptors/src/lib/*"],
      "@common/interfaces/*": ["libs/interfaces/src/lib/*"],
      "@common/kafka/*": ["libs/kafka/src/lib/*"],
      "@common/logger": ["libs/logger/src/index.ts"],
      "@common/middlewares/*": ["libs/middlewares/src/lib/*"],
      "@common/observability/*": ["libs/observability/src/lib/*"],
      "@common/saga-orchestration": ["libs/saga-orchestration/src/index.ts"],
      "@common/saga-orchestration/*": ["libs/saga-orchestration/src/lib/*"],
      "@common/schemas/*": ["libs/schemas/src/lib/*"],
      "@common/utils/*": ["libs/utils/src/lib/*"],
      "@einvoice/saga-orchestration": ["libs/saga-orchestration/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
